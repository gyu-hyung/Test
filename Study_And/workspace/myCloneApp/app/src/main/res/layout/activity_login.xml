<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoginActivity"
    android:orientation="vertical"
    android:background="#202020"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:layout_marginBottom="10dp"
        >
        <Button
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:background="#00ff0000"
            android:text="취소"
            android:textSize="15dp"
            android:textColor="#0088FF"
            android:textStyle="bold"
            android:layout_margin="5dp"
            android:id="@+id/btn_cancle"
            />


        <ImageView
            android:layout_gravity="center"
            android:layout_width="150dp"
            android:layout_height="0dp"
            android:layout_weight="9"
            android:src="@drawable/sss"

            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:layout_weight="1"
            android:text="전화번호 또는 FaceBook"
            android:textStyle="bold"
            android:textSize="20dp"
            android:textColor="#FFFFFF"
            android:gravity="center"
            android:layout_marginBottom="3dp"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:layout_weight="1"
            android:text="계정으로 로그인하세요"
            android:textStyle="bold"
            android:textSize="20dp"
            android:textColor="#FFFFFF"
            android:gravity="center"
            android:layout_marginBottom="3dp"
            />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        >
        <EditText
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:hint="   전화번호 또는 이메일 주소"
            android:layout_marginTop="20dp"
            android:layout_marginHorizontal="25dp"
            android:textColor="#D1D1D1"
            android:textColorHint="#777777"
            android:background="#474747"
            android:id="@+id/edt_id"
            />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:hint="   비밀번호"
            android:layout_marginTop="3dp"
            android:layout_marginHorizontal="25dp"
            android:textColor="#D1D1D1"
            android:textColorHint="#777777"
            android:background="#474747"
            android:id="@+id/edt_pw"
            />
        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:text="로그인 정보 저장"
            android:textColor="#D1D1D1"
            android:layout_marginLeft="20dp"
            android:id="@+id/chk_auto"
            />
        <Button
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginHorizontal="25dp"
            android:backgroundTint="#636363"
            android:text="로그인"
            android:textStyle="bold"
            android:id="@+id/btn_login"
            />
        <Button
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginHorizontal="25dp"
            android:backgroundTint="#636363"
            android:text="새 계정 만들기"
            android:id="@+id/btn_join"
            android:textStyle="bold"
            />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:background="#00ff0000"
            android:text="비밀번호를 잊으셨나요?"
            android:textColor="#FC0099FF"
            android:textStyle="bold"
            android:layout_marginTop="7dp"
            android:id="@+id/btn_forget"
            />



    </LinearLayout>















</LinearLayout>